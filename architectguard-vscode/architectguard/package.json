{
  "name": "architectguard",
  "displayName": "architectguard",
  "description": "AI-powered architectural review tool for your codebase",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other",
    "Linters"
  ],
  "activationEvents": [],
  "browser": "./dist/web/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "architectguard.reviewArchitecture",
        "title": "Run Architectural Review",
        "category": "ArchitectGuard"
      }
    ],
    "configuration": {
      "title": "ArchitectGuard",
      "properties": {
        "architectguard.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API Key for architectural analysis"
        },
        "architectguard.maxFilesToAnalyze": {
          "type": "number",
          "default": 100,
          "description": "Maximum number of files to analyze"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@types/assert": "^1.5.11",
    "@types/glob": "9.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^18.15.13",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-electron": "^2.3.2",
    "@vscode/test-web": "^0.0.71",
    "assert": "^2.1.0",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "glob": "^11.0.2",
    "mocha": "^11.1.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.9.5"
  }
}
